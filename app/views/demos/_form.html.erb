<%= content_for :head do %>
	<%= stylesheet_link_tag 'plugins/jquery_ui/jquery-ui.min' %>
<% end %>
<%= content_for :footer do %>
	<%= javascript_include_tag 'plugins/jquery_ui/jquery-ui.min' %>
	<%= javascript_include_tag 'demo_form' %>
<% end %>
<%= form_for @demo, url: demos_path do |f|%>
	<div class="form-group">
	    <%= f.label :name, '活动名称' %>
	    <%= f.text_field :name, class:'form-control', :placeholder => '活动名称' %>
  	</div>
	<div class="form-group">
  	    <%= f.label :name, '开始时间' %>
	    <%= f.text_field :started_at, class:'form-control', :placeholder => '开始时间' %>
  	</div>	
  	<div class="form-group">
	    <%= f.submit '保存', class:'form-control' %>
  	</div>	
<% end %>